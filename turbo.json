{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "db:generate": {
            "cache": false
        },
        "db:push": {
            "cache": false
        },
        "build": {
            "dependsOn": ["^db:generate", "^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "dependsOn": ["^db:generate"],
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": ["^start"],
            "persistent": true,
            "env": ["NODE_ENV=production"]
        }
    }
}
