generator client {
    provider = "prisma-client-js"
}

generator zod {
    provider         = "zod-prisma-types"
    createInputTypes = false
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id String @id @default(cuid())

    username    String  @unique
    global_name String?
    avatar      String?

    locale String?

    updatedAt DateTime @updatedAt
}
